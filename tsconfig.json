{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "dist",
        "watch": false,
        "sourceMap": true,
        "removeComments": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ],
        "baseUrl": "."
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.spec.ts"
    ],
    "compileOnSave": true,
    "traceResolution": true,
}